<h1> Create Summary </h1>
<div class ="row">
  <div class="col-md-8">
    <%= form_for @summary do |f| %>
      <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Enter summary" %>
       </div>
         <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>
